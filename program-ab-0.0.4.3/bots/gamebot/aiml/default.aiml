<?xml version = "1.0" encoding = "UTF-8"?>
<aiml version = "1.0.1" encoding ="UTF-8"?>
   <category>
      <pattern>*</pattern>
      <template>
         <think><set name = "topic">*</set></think>
         <random>
            <li>Try asking me a question</li>
            <li>Pardon?</li>
            <li>Sorry?</li>
            <li><star/>?</li>
         </random>
      </template>
   </category>

   <category>
      <pattern>I *</pattern>
      <template>
         <think><set name = "topic">*</set></think>
         <random>
            <li>Oh that's cool!</li>
            <li>I didn't know that</li>
            <li>Thanks for sharing</li>
         </random>
      </template>
   </category>
   
   <category>
      <pattern>YOU *</pattern>
      <template>
         <think><set name = "topic">*</set></think>
         <random>
            <li>I wonder if many people think that</li>
            <li>You think?</li>
            <li>~I guess so.</li>
            <li>That's a fair opinion.</li>            
         </random>
      </template>
   </category>
   
   <category>
      <pattern>WHAT IS *</pattern>
      <template>
         Sorry I am not sure what <star/> is.
      </template>
   </category>
   
   <category>
      <pattern>TELL ME WHAT * IS<pattern>
      <template>
         <srai>WHAT IS <star/></srai>
      </template>
   </category>
   
   <category>
      <pattern>HOW IS *</pattern>
      <template>
         Sorry I don't know how <star/> is.
      </template>
   </category>
   
   <category>
      <pattern>TELL ME HOW * IS<pattern>
      <template>
         <srai>HOW IS <star/></srai>
      </template>
   </category>
   
   <category>
      <pattern>SAY *</pattern>
      <template>
         <star/>
      </template>
   </category>
   
   <category>
      <pattern>STOP IT</pattern>
      <template>
         Stop what?
      </template>
   </category>
   
   <category>
      <pattern>I said *</pattern>
      <template>
         ...I know what you said: <star/>
      </template>
   </category>
</aiml>
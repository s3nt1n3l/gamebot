<?xml version = "1.0" encoding = "UTF-8"?>
<aiml version = "1.0.1" encoding ="UTF-8"?>
   <category>
      <pattern>GAMES</pattern>
      <template>
         <think><set name = "topic">games</set></think>
         <random>
            <li>Yes let's talk about games! What's your favourite genre?</li>
            <li>I like games. What's you're favourite genre?</li>
         </random>
      </template>
   </category>
   
   <category>
      <pattern>_ GAMES</pattern>
      <srai>GAMES</srai>
   </category>
   
   <category>
      <pattern>GAMES *</pattern>
      <srai>GAMES</srai>
   </category>
   
   <topic name = "games">
      <category>
         <pattern>STRATEGY</pattern>
         <template>
            <think><set name = "topic">strategy</set></think>
            Oh strategy. Nice! What's your favourite strategy game?
         </template>
      </category>
      
      <category>
         <pattern>ACTION</pattern>
         <template>
            <think><set name = "topic">action</set></think>
            Oh action. Nice! What's your favourite action game?
         </template>
      </category>
      
      <category>
         <pattern>ADVENTURE</pattern>
         <template>
            <think><set name = "topic">adventure</set></think>
            Oh adventure. Nice! What's your favourite adventure game?
         </template>
      </category>
      
      <category>
         <pattern>FIRST PERSON SHOOTER</pattern>
         <template>
            <think><set name = "topic">FPS</set></think>
            Oh First Person Shooter. Nice! What's your favourite fps game?
         </template>
      </category>
      
      <category>
         <pattern>FPS</pattern>
         <srai>FIRST PERSON SHOOTER</srai>
      </category>
   </topic>
</aiml>